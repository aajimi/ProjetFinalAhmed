{% extends 'baseF.html.twig' %}

{% block content %}
<!-- Page Content -->
<div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
        <h1 class="display-3">Historiques Covoiturage</h1>
        <p class="lead">Vous trouverez dans cette page, les offres de covoiturage expirés, vous pouvez passer une réclamation ou signaler l'offre.</p>
        <a href="#" class="btn btn-primary btn-lg">Call to action!</a>
    </header>

    <!-- Page Features -->
    <div class="row text-center">
        {% for offreCovoiturage in offreCovoiturages %}
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="{{ asset('img/firstcar.jpeg') }}"  alt="">
                    <div class="card-body">
                        <p class="card-text">De {{ offreCovoiturage.lieuDepart }} à {{ offreCovoiturage.lieuArrivee }} </p>
                        <p class="card-text">le {% if offreCovoiturage.dateDepart %}{{ offreCovoiturage.dateDepart|date('Y-m-d H:i:s') }}{% endif %} </p>
                        <p class="card-text">Nombre de places disponibles : offre expiré !  </p>

                        <a class="btn btn-primary btn-sm" href="{{ path('ReclamationCovoiturage_index', { 'idOffre': offreCovoiturage.idOffre }) }}">Réclamations</a>

                        <a class="btn btn-primary btn-sm" href="{{ path('SignalerCovoiturage_index', { 'idOffre': offreCovoiturage.idOffre }) }}">Signaler</a>

                    </div>
                    <div class="card-footer">
                        Mes commentaires
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <!-- /.row -->

</div>



<!-- /.container -->
{% endblock %}
